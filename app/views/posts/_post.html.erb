<div id="<%= dom_id post %>" class="bg-white rounded-lg shadow-md p-6 mb-8 hover:shadow-lg transition duration-300 ease-in-out transform hover:-translate-y-2">

  <% if post.image.attached? %>
    <div class="mb-5">
      <%= link_to post.image , target: "_blank" do %>
        <%= image_tag(post.image, class: "h-auto rounded-lg shadow-md max-w-full max-h-48 object-cover") %>
      <% end %>
    </div>
  <% end %>

  <p class="my-5">
    <strong class="block font-semibold mb-1 text-lg text-blue-600"><%= post.title %></strong>
    
   
    <span class="block text-gray-700"><%= post.body %></span>
    <span class="text-gray-700">created <%= time_ago_in_words(post.created_at) %> ago</span>
  </p>

 <% if action_name != "show" %>
  <div class="flex justify-start space-x-2 mt-4">
    <%= link_to "Show this post", post, class: "inline-block px-4 py-2 bg-indigo-500 text-white font-semibold rounded-lg shadow-md hover:bg-indigo-600 transition duration-300" %>
    <%= link_to "Edit this post", edit_post_path(post), class: "inline-block px-4 py-2 bg-indigo-500 text-white font-semibold rounded-lg shadow-md hover:bg-indigo-600 transition duration-300" %>
  </div>
<% end %>

</div>
