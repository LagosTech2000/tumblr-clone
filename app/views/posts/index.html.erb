<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block shadow-md" id="notice"><%= notice %></p>
  <% end %>

  <div class="mt-2 flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl text-gray-800 ml-2">My Posts</h1>

  </div>

  <!-- app/views/posts/index.html.erb -->
<div id="posts" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 min-w-full bg-white rounded-lg shadow-md">
  <%= render @posts %>
</div>

</div>
