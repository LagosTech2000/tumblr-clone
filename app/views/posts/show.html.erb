<div class="mx-auto md:w-2/3 w-full">
  <div class="flex flex-col md:flex-row">

    <!-- Post Details Section -->
    <div class="md:w-2/3 w-full md:pr-4">
      <%= render @post %>

      <% if current_user.post.find_by(id: @post.id) %>
        <%= link_to "Edit this post", edit_post_path(@post), class: "bg-indigo-500 hover:bg-indigo-600 mt-2 text-white rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <div class="inline-block ml-2">
          <%= button_to "Destroy this post", post_path(@post), method: :delete, class: "bg-indigo-500 hover:bg-indigo-600 mt-2 text-white mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
        </div>
      <% end %>

      <%= link_to "Back to posts", posts_path, class: "bg-indigo-500 hover:bg-indigo-600 mt-2 text-white ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>

    <!-- Comments Section -->
    <div class="md:w-1/3 w-full mt-4 md:mt-0">
      <%= render partial: 'comments/comments', locals: { post: @post, comment:  Comment.new } %>
    </div>
  </div>
</div>
