<div class="container mx-auto px-4 py-8 flex flex-col md:flex-row">
  <!-- Left Column -->
  <div class="w-full md:w-1/3 pr-8 md:block hidden">
    <!-- Search Bar -->
    <div class="mb-8">
      <!-- Your search bar HTML goes here -->
      <input type="text" placeholder="Search..." class="w-full px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-500">
    </div>

    <!-- Suggested Users Section -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Suggested Users</h2>
      <div class="grid grid-cols-1 gap-4">
        <% @users.each do |user| %>
          <div class="bg-white rounded-lg shadow-md p-4 flex items-center">
            <div class="overflow-hidden">
              <h3 class="text-xl font-semibold"><%= user.username %></h3> <!-- Apply the whitespace-no-wrap class here -->
              <%= link_to 'View Profile', home_user_path(user) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Right Column -->
  <div class="w-full md:w-2/3">
    <div class="overflow-y-auto" style="max-height: calc(100vh - 128px);"> <!-- Adjust max-height as needed -->
      <!-- Featured Posts Section -->
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-4">Featured Posts</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @posts.each do |post| %>
            <div class="bg-white rounded-lg shadow-md p-4">
              <h3 class="text-xl font-semibold mb-2"><%= post.title %></h3>
              <a href="<%= post_path(post) %>" class="text-blue-500 hover:underline mt-2 block">Read more</a>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Most Liked Posts Section -->
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-4">Most Liked Posts</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @posts.each do |post| %>
            <div class="bg-white rounded-lg shadow-md p-4">
              <h3 class="text-xl font-semibold mb-2"><%= post.title %></h3>
              <a href="<%= post_path(post) %>" class="text-blue-500 hover:underline mt-2 block">Read more</a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
