<div class="container mx-auto px-4 py-8 flex flex-col md:flex-row">
  <!-- Left Column -->
  <div class="w-full md:w-1/3 pr-8 md:block hidden">
    <!-- Search Bar -->
    <div class="mb-8">
      <input type="text" placeholder="Search..." class="w-full px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-500">
    </div>

    <!-- Suggested Users Section -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Suggested Users</h2>
      <div class="grid grid-cols-1 gap-4">
        <% @users.each do |user| %>
          <div class="bg-white rounded-lg shadow-md p-4 flex items-center">
            <div class="overflow-hidden">
              <h3 class="text-xl font-semibold whitespace-nowrap"><%= user.username %></h3>
              <%= link_to 'View Profile', home_user_path(user), class: 'text-blue-500 hover:underline' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Right Column -->
  <div class="w-full md:w-2/3 lg:w-1/2">
    <div class="overflow-y-auto" style="max-height: calc(100vh - 128px);"> <!-- Adjust max-height as needed -->
      <!-- Featured Posts Section -->
      <div class="mb-8">
        <div class="grid grid-cols-1 gap-4">
          <% @posts.each do |post| %>
            <div class="bg-white rounded-lg shadow-md p-4 mb-4">
              <h5 class=" font-semibold mb-2"><%= post.title %></h5>
              <% if post.image.attached? %>
                <div class="mb-5">
                  <%= link_to post.image do %>
                    <%= image_tag(post.image, class: "w-full h-90 rounded-lg shadow-md object-fit") %>
                  <% end %>
                </div>
              <% end %>
              <a href="<%= post_path(post) %>" class="text-blue-500 hover:underline mt-2 block">Visit</a>
              <span class="block text-gray-900">by <%= post.user.username %></span>
              <div class="mt-4 flex justify-between items-center border-t border-gray-200 pt-2">
                <button class="flex items-center text-gray-600 hover:text-blue-500">
                  <i class="fas fa-thumbs-up mr-1"></i> Like
                </button>
                <button class="flex items-center text-gray-600 hover:text-blue-500">
                  <i class="fas fa-comment mr-1"></i> Comment
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
